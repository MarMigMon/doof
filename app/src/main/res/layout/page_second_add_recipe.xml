<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingEnd="20dp"
    android:paddingStart="20dp">

    <TextView
        android:id="@+id/tvIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Ingredients"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/ingredientsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvIngredients">

        <EditText
            android:id="@+id/ingredient1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingredient 1"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ingredientButtonLayout"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingredientsLayout"
        android:gravity="center">

        <Button
            android:id="@+id/btRemoveIngredient"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_button_light"
            android:text="Remove Ingredient"
            android:visibility="gone" />

        <Button
            android:id="@+id/btAddIngredient"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_button_light"
            android:text="Add Ingredient" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingredientButtonLayout"
        android:layout_marginTop="20dp"
        android:text="Instructions"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/instructionsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvInstructions">

        <EditText
            android:id="@+id/step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Step 1"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/stepButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructionsLayout"
        android:layout_margin="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/btRemoveStep"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_button_light"
            android:text="Remove Step"
            android:visibility="gone" />

        <Button
            android:id="@+id/btAddStep"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_button_light"
            android:text="Add Step" />
    </LinearLayout>

    <Button
        android:id="@+id/btAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepButtonLayout"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/round_button"
        android:text="Upload Audio"
        android:visibility="gone" />

    <Button
        android:id="@+id/btSubmit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/stepButtonLayout"
        android:layout_margin="10dp"
        android:background="@drawable/round_button"
        android:text="SUBMIT" />

    <Button
        android:id="@+id/btBack"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/stepButtonLayout"
        android:layout_margin="10dp"
        android:background="@drawable/round_button_light"
        android:text="BACK" />

</RelativeLayout>