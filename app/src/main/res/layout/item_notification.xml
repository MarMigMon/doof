<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="4dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

        <ImageView
            android:id="@+id/ivActiveUserImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:contentDescription="@string/user_image"
            android:focusable="true"
            android:src="@drawable/ic_profile" />

        <ImageView
            android:id="@+id/ivRecipe"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:contentDescription="@string/recipe_image"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image_placeholder" />

        <TextView
            android:id="@+id/tvActiveUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivActiveUserImage"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ivActiveUserImage"
            android:clickable="true"
            android:focusable="true"
            android:text="username"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRelativeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivActiveUserImage"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/ivActiveUserImage"
            android:text="Relative Time" />

        <TextView
            android:id="@+id/tvNotificationMessage"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvActiveUser"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tvActiveUser"
            android:text="liked/rated your recipe." />

        </RelativeLayout>

</android.support.v7.widget.CardView>
