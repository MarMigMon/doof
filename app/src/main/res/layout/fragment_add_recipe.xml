<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="me.mvega.foodapp.AddRecipeFragment">

        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:indeterminate="true"
            android:translationZ="2dp"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/tvNewRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_recipe"
                android:textSize="24sp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etRecipeNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNewRecipe">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etRecipeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/recipe_name"
                    android:inputType="text"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etDescriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etRecipeNameLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/recipe_desc"
                    android:inputType="text"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>


            <RelativeLayout
                android:id="@+id/yieldLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etDescriptionLayout">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etYieldLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/tvPrepTime">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etYield"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Yield"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/tvPrepTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="24dp"
                    android:text="servings"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/prepTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yieldLayout"
                android:layout_marginEnd="-15dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etPrepTimeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/spPrepTime">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etPrepTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Prep Time"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/spPrepTime"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:spinnerMode="dropdown"
                    android:textAlignment="textEnd" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/etTypeLayout"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_below="@+id/prepTimeLayout"
                android:layout_marginEnd="-15dp"
                android:layout_marginStart="5dp"
                android:gravity="bottom">

                <Spinner
                    android:id="@+id/spType"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etIngredientsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etTypeLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/recipe_ing"
                    android:inputType="textMultiLine" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etIngredientsLayout"
                android:layout_marginTop="15dp"
                android:text="Instructions"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/instructionsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvInstructions">

                <EditText
                    android:id="@+id/step1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Step 1" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/instructionsLayout"
                android:layout_margin="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btAddStep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Step" />

                <Button
                    android:id="@+id/btRemoveStep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove Step"
                    android:visibility="gone" />

            </LinearLayout>

            <Button
                android:id="@+id/btImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonLayout"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="Upload Image" />

            <ImageView
                android:id="@+id/ivPreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btImage"
                android:adjustViewBounds="true" />

            <Button
                android:id="@+id/btAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivPreview"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="Upload Audio" />

            <Button
                android:id="@+id/btAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btAudio"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="Submit Recipe" />

        </RelativeLayout>
    </FrameLayout>
</ScrollView>