<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <!-- The user sees these fields first -->

        <RelativeLayout
            android:id="@+id/page1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" >

                <Button
                    android:id="@+id/btImage"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/round_button_light"
                    android:padding="10dp"
                    android:text="UPLOAD IMAGE" />

                <ImageView
                    android:id="@+id/ivPreview"
                    android:layout_width="match_parent"
                    android:layout_height="203dp"

                    android:contentDescription="@string/recipe_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_placeholder" />
            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etRecipeNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageLayout"
                android:layout_marginTop="5dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etRecipeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/recipe_name"
                    android:inputType="text"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etDescriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etRecipeNameLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/recipe_desc"
                    android:inputType="textMultiLine"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:id="@+id/yieldLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etDescriptionLayout">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etYieldLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/yieldText">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etYield"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Yield"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/yieldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="30dp"
                    android:text="servings"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/prepTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yieldLayout">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etPrepTimeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/spPrepTime">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etPrepTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Prep Time"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spPrepTime"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:gravity="top|end"
                    android:spinnerMode="dropdown"
                    android:textAlignment="textEnd"
                    app:backgroundTint="@color/sunflower" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/typeLayout"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_below="@+id/prepTimeLayout"
                android:layout_centerHorizontal="true"
                android:gravity="bottom">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spType"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="top"
                    android:spinnerMode="dropdown"
                    app:backgroundTint="@color/sunflower" />

            </LinearLayout>

            <Button
                android:id="@+id/btNext"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/typeLayout"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_button"
                android:padding="10dp"
                android:text="NEXT" />
        </RelativeLayout>


        <!-- Once the user clicks the NEXT button, he/she sees the following fields -->

        <RelativeLayout
            android:id="@+id/page2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Ingredients"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/ingredientsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvIngredients">

                <EditText
                    android:id="@+id/ingredient1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingredient 1"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="18sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ingredientButtonLayout"
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredientsLayout"
                android:gravity="center">

                <Button
                    android:id="@+id/btRemoveIngredient"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button_light"
                    android:text="Remove Ingredient"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btAddIngredient"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button_light"
                    android:text="Add Ingredient" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredientButtonLayout"
                android:layout_marginTop="20dp"
                android:text="Instructions"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/instructionsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvInstructions">

                <EditText
                    android:id="@+id/step1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Step 1"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="18sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/stepButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/instructionsLayout"
                android:layout_margin="5dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btRemoveStep"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button_light"
                    android:text="Remove Step"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btAddStep"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button_light"
                    android:text="Add Step" />
            </LinearLayout>

            <Button
                android:id="@+id/btAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stepButtonLayout"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@drawable/round_button"
                android:text="Upload Audio"
                android:visibility="gone" />

            <Button
                android:id="@+id/btSubmit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/stepButtonLayout"
                android:layout_margin="10dp"
                android:background="@drawable/round_button"
                android:text="SUBMIT" />

            <Button
                android:id="@+id/btBack"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/stepButtonLayout"
                android:layout_margin="10dp"
                android:background="@drawable/round_button_light"
                android:text="BACK" />

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:indeterminate="true"
                android:translationZ="2dp"
                android:visibility="invisible" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>